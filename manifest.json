{
  "manifest_version": 3,
  "name": "Threads to HTML",
  "version": "0.3.1",
  "description": "Convert Threads posts to HTML",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "*://*.threads.com/*",
    "*://*.threads.net/*",
    "*://*.fbcdn.net/*",
    "*://*.cdninstagram.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.threads.com/*",
        "*://*.threads.net/*"
      ],
      "js": ["content.js"],
      "matchAboutBlank": true,
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
} 