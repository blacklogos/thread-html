{
  "manifest_version": 3,
  "name": "Threads to HTML",
  "version": "1.0",
  "description": "Convert Threads posts to HTML",
  "permissions": [
    "activeTab",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "*://*.threads.net/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.threads.net/*"
      ],
      "js": ["content.js"],
      "matchAboutBlank": true,
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
} 